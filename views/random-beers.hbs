{{#each beers}}
    <img src="{{image}}">
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <h2>{{tagline}}</h2>
    <h3>{{pairing}}</h3>
    <ul class= "food-pairing">
        {{#each beers.pairing}}
            <li>{{this}}</li>
        {{/each}}
    </ul>    
    <p>{{brewerTips}}</p>
{{/each}}